<h1> listing of pujas pictures </h1>

<% @pictures.each do |picture| %>


    <p>Tile: <%= picture.title %> </p>
    <%= image_tag picture.picture_image.thumb.url %>
    <p>Description:<br> <%= picture.description.truncate_words(25) %> </p>

    <%= link_to 'Click on more details to see picture', picture_path(picture) %> <br>
     <br>
     <%= link_to 'Edit', edit_picture_path(picture) %>
     <%= link_to 'Destroy', picture_path(picture),
               method: :delete,
               data: { confirm: 'Are you sure?' } %>

<% end %>

  <%= link_to 'New picture', new_picture_path %>

  <%= link_to 'Home', root_path %>
